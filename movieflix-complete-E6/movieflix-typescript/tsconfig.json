{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "noEmit": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules"]
}
